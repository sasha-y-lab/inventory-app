<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>

  <%- include('partials/menu') %>

  <div id="container">

    <div id="titleSection">
      <h1><%= title %></h1>

      

       <a class="btn-primary" href="/items/new">Add New Item</a><br><br>

 <a href="/categories" class="btn-primary"> Back to categories</a>

</div>

<div id="nav2">

      <% if (typeof category !== "undefined") { %>

        
        <p><%= category.description %></p>

       

      <% } %>

</div>

  

    <% if (items.length === 0) { %>
      <p>No products in this category yet.</p>
    <% } else { %>
      <div id="categoryCards">

        <% items.forEach(item => { %>
          <div class="categoryCard">
            <h2><%= item.name %></h2>
            <p><strong>Brand:</strong> <%= item.brand %></p>
            <p><strong>Shade:</strong> <%= item.shade %></p>
            <p><strong>Price:</strong> $<%= item.price %></p>
            <p><strong>Stock:</strong> <%= item.stock %></p>
            <p><%= item.description %></p>

            <div id="editSection">
            <a href="/items/<%= item.id %>/edit">Edit</a>

            <form action="/items/<%= item.id %>/delete" method="POST">
              <input type="password" name="adminPassword" placeholder="Admin password" required>
              <button type="submit">Delete</button>
            </form>

</div>

          </div>
        <% }) %>

      </div>
    <% } %>

   
   

  </div>

</body>
</html>
