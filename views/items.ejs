<!-- Shows:

Product name

Brand

Shade

Price

Description

Stock count

-->

<h1><%= title %></h1>

<% if (items.length === 0) { %>
  <p>No items yet.</p>
<% } %>

<ul>
  <% items.forEach(item => { %>
    <li>
      <strong><%= item.name %></strong><br>
      Brand: <%= item.brand %><br>
      Shade: <%= item.shade %><br>
      Price: $<%= item.price %><br>
      Stock: <%= item.stock %><br>
      Description: <%= item.description %><br>

      <a href="/items/<%= item.id %>/edit">Edit</a>
      <form action="/items/<%= item.id %>/delete" method="POST" style="display:inline;">
        <button type="submit">Delete</button>
      </form>
    </li>
    <hr>
  <% }) %>
</ul>

<a href="/items/new">Add New Item</a>

<a href="/categories">Back to categories</a>
