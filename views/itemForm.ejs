<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <style>
    form div { margin-bottom: 10px; }
    label { display: inline-block; width: 100px; font-weight: bold; }
    input, textarea { width: 300px; }
    button { padding: 5px 10px; }
  </style>
</head>
<body>

<h1><%= title %></h1>

<form action="<%= item.id ? '/items/' + item.id : '/items' %>" method="POST">

  <div>
    <label for="name">Product Name:</label>
    <input type="text" id="name" name="name" value="<%= item.name || '' %>" required>
  </div>

  <div>
    <label for="brand">Brand:</label>
    <input type="text" id="brand" name="brand" value="<%= item.brand || '' %>" required>
  </div>

  <div>
    <label for="category_id">Category:</label>
    <select id="category_id" name="category_id" required>
      <option value="">--Select Category--</option>
      <% categories.forEach(cat => { %>
        <option value="<%= cat.id %>" <%= item.category_id == cat.id ? "selected" : "" %>><%= cat.name %></option>
      <% }) %>
    </select>
  </div>

  <div>
    <label for="shade">Shade:</label>
    <input type="text" id="shade" name="shade" value="<%= item.shade || '' %>">
  </div>

  <div>
    <label for="finish">Finish:</label>
    <input type="text" id="finish" name="finish" value="<%= item.finish || '' %>">
  </div>

  <div>
    <label for="price">Price ($):</label>
    <input type="number" step="0.01" id="price" name="price" value="<%= item.price || '' %>" required>
  </div>

  <div>
    <label for="stock">Stock:</label>
    <input type="number" id="stock" name="stock" value="<%= item.stock || '' %>" required>
  </div>

  <div>
    <label for="description">Description:</label>
    <textarea id="description" name="description"><%= item.description || '' %></textarea>
  </div>

  <button type="submit"><%= item.id ? 'Update' : 'Create' %></button>
</form>

<a href="/items">Back to Items</a>

<a href="/categories">Back to categories</a>

</body>
</html>
